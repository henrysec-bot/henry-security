{
  "compilerOptions": {
    // Suporte a alias como @/
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    // Suporte JS e tipos
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,

    // Módulo e resolução
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    // JSX para Next.js
    "jsx": "preserve",

    // Otimizações
    "incremental": true,

    // Plugins do Next.js
    "plugins": [{ "name": "next" }],

    // Bibliotecas disponíveis no ambiente
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
